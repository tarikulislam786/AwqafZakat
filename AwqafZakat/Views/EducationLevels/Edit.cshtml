@model AwqafZakat.Models.tblEducationLevel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

@using (Html.BeginForm("Edit", "EducationLevels", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.educationLevelID, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.educationLevelID, new { htmlAttributes = new { @type = "hidden", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.educationLevelID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-9 col-sm-push-1">
                @Html.EditorFor(model => model.educationLevelName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.educationLevelName, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.educationLevelName, htmlAttributes: new { @class = "control-label col-sm-3" })
        </div>

        <div class="form-group">
            <div class="col-sm-7"></div>
            <div class="col-sm-3 col-sm-pull-2">
                <div class="btn btn-default" style="color:black">
                    @Html.ActionLink("Cancel", "Index")
                </div>
            </div>
            <div class="col-sm-2 col-sm-pull-2">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}